{
  "extends": ["next/core-web-vitals", "prettier", "plugin:tailwindcss/recommended"],
  "plugins": ["simple-import-sort", "@stylistic"],
  "rules": {
    "no-console": ["error"],
    "@stylistic/indent": ["error", 2],
    "simple-import-sort/exports": "error",
    "simple-import-sort/imports": [
      "error",
      {
        "groups": [
          ["^.+\\.?(css)$", "^node:", "^react", "^@?\\w"],
          ["^@/lib", "^@/component", "^@/ui"]
        ]
      }
    ]
  }
}
